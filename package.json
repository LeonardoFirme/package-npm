{
  "name": "@LeonardoFirme/package-npm",
  "version": "1.0.0",
  "description": "Biblioteca de componentes profissionais para ERP/SaaS",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
