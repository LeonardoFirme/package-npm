    "build": "tsup src/index.tsx --format cjs,esm --dts --minify --clean",
    "dev": "tsup src/index.tsx --format cjs,esm --watch --dts",
    "lint": "eslint src"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  }
}