{
  "name": "@leonardofirme/package-npm",
  "version": "1.2.1",
  "description": "Biblioteca modular de componentes e utilitários de alto nível para ecossistemas modernos.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeonardoFirme/package-npm.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup src/index.tsx --watch --dts",
    "build": "tsup src/index.tsx --format cjs,esm --minify --dts --clean",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run type-check"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/node": "^22.13.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "eslint": "^9.20.1"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^12.4.7",
    "sonner": "^2.0.1",
    "tailwind-merge": "^3.0.2",
    "bcrypt-ts": "^5.0.3",
    "jose": "^6.0.0"
  },
  "optionalDependencies": {
    "next-auth": "^5.0.0-beta.25"
  }
}